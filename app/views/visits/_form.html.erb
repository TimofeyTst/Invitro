<%= form_with(model: visit) do |form| %>
  <% if visit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(visit.errors.count, "error") %> prohibited this visit from being saved:</h2>

      <ul>
        <% visit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :doctor_id %>
    <%= form.collection_select :doctor_id, Doctor.all, :id, :full_name %>

    <%= form.label :patient_id %>
    <%= form.collection_select :patient_id, Patient.all, :id, :full_name %>
  </div>

  <div>
    <%= form.label :visit_date %>
    <%= form.date_select :visit_date %>
    
    <%= form.label :visit_time %>
    <%= form.time_select :visit_time %>
    
    <%= form.label :room_id %>
    <%= form.collection_select :room_id, Room.all, :id, :room_number %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
